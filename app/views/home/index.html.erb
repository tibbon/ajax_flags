<div id="center-content">
  <h1>Countries of the world</h1>
  
  <p>
    <input type="text" id="step-input" size="3" maxlength="3" value="5"> at a time 
    <input type="button" value="Populate" id="populate-button"> 
    <input type="button" value="Reset" id="reset-button"> 
    <input type="button" value="All Data" id="all-button">
  </p>
  
  <div id="content" class="f32"></div>

</div>

<script id="country-template" type="text/x-handlebars-template">
  <div id="country-{{id}}" data-date={{created_at}}>
    {{# if north_america}}
      <p class = 'na'>
    {{ else }}
      <p>
    {{/if}}
      <span class="flag {{abbreviation}}"></span> {{name}} ({{abbreviation}})
    </p>
  </div>
</script>

<script id="data-template" type="text/x-handlebars-template">
  {{#each countries}}
    {{> country}}
  {{/each}}
</script>